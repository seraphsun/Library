<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/shifting_bottom_navigation_container"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen_56"
              android:background="?selectableItemBackgroundBorderless"
              android:orientation="vertical"
              android:paddingLeft="@dimen/dimen_6"
              android:paddingRight="@dimen/dimen_6"
              android:paddingTop="@dimen/dimen_16">

    <ImageView
        android:id="@+id/shifting_bottom_navigation_icon"
        android:layout_width="@dimen/dimen_24"
        android:layout_height="@dimen/dimen_24"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/shifting_bottom_navigation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lines="1"
        android:scaleX="0"
        android:scaleY="0"
        android:textSize="@dimen/dimen_14"/>

</LinearLayout>