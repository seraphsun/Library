<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:waterdrop="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="bottom|center_horizontal"
              android:orientation="horizontal">

    <code.support.demo.widget.refresh.refresh_11.DrawWaterDrop
        android:id="@+id/waterDrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        waterdrop:bottom_circle_x="20dp"
        waterdrop:bottom_circle_y="20dp"
        waterdrop:max_circle_radius="20dp"
        waterdrop:min_circle_radius="5dp"
        waterdrop:top_circle_x="20dp"
        waterdrop:top_circle_y="20dp"
        waterdrop:water_drop_color="#9ba2ab"/>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:visibility="gone"/>

</LinearLayout>